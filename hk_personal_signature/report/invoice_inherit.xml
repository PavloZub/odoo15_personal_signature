        <template id="hk_invoice_rahf_inherit" inherit_id="kw_invoice_rahf.kw_invoice_rahf_template">
            <xpath expr="//table[5]//tr//td" position="inside">
                <t t-if="doc.user_id">
                    <span>
                        <img style="max-height:1cm; max-width:4cm; position: relative; left: 0px; top: -150px;"
                             t-att-src="'data:image/png;base64,%s' % to_text(doc.user_id.sign_image)"/>
                        <img style="max-height:5cm; max-width:5cm; position: relative; left: 0px; top: -200px;"
                             t-att-src="'data:image/png;base64,%s' % to_text(doc.user_id.stamp_image)"/>

                    </span>
                </t>
            </xpath>
        </template>


