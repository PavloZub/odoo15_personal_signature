<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add image field to existing view -->
        <record model="ir.ui.view" id="company_form_view">
            <field name="name">company.company.signature</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Signature">
                        <group>
                            <field name="sign_image" widget="image" class="oe_avatar"/>
                            <field name="stamp_image" widget="image" class="oe_avatar"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="company_form_view">
            <field name="name">company.users.signature</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Signature">
                        <group>
                            <field name="sign_image" widget="image" class="oe_avatar"/>
                            <field name="stamp_image" widget="image" class="oe_avatar"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>



    </data>
</odoo>